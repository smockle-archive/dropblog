{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Dropblog: Syncs Markdown files from Dropbox to GitHub",
  "Resources": {
    "S3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "NotificationConfiguration": {
          "LambdaConfigurations": [
            {
              "Function": { "Fn::GetAtt": ["CreateS3ToGitHubFunction", "Arn"] },
              "Event": "s3:ObjectCreated:*"
            },
            {
              "Function": { "Fn::GetAtt": ["DeleteS3ToGitHubFunction", "Arn"] },
              "Event": "s3:ObjectRemoved:*"
            }
          ]
        }
      }
    },
    "CreateS3LambdaInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:invokeFunction",
        "FunctionName": { "Fn::GetAtt": ["CreateS3ToGitHubFunction", "Arn"] },
        "Principal": "s3.amazonaws.com",
        "SourceAccount": { "Ref": "AWS::AccountId" },
        "SourceArn": {
          "Fn::Join": [":", ["arn", "aws", "s3", "", "", { "Ref": "S3Bucket" }]]
        }
      }
    },
    "DeleteS3LambdaInvokePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "Action": "lambda:invokeFunction",
        "FunctionName": { "Fn::GetAtt": ["DeleteS3ToGitHubFunction", "Arn"] },
        "Principal": "s3.amazonaws.com",
        "SourceAccount": { "Ref": "AWS::AccountId" },
        "SourceArn": {
          "Fn::Join": [":", ["arn", "aws", "s3", "", "", { "Ref": "S3Bucket" }]]
        }
      }
    }
  }
}
