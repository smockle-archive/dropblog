{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Transform": "AWS::Serverless-2016-10-31",
  "Description": "Dropblog: Syncs Markdown files from Dropbox to GitHub",
  "Parameters": {
    "AwsS3BucketName": {
      "Type": "String"
    },
    "DropboxAppSecret": {
      "Type": "String"
    },
    "DropboxUserId": {
      "Type": "String"
    },
    "DropboxUserToken": {
      "Type": "String"
    },
    "GitHubToken": {
      "Type": "String"
    },
    "GitHubUsername": {
      "Type": "String"
    },
    "GitHubRepo": {
      "Type": "String"
    }
  },
  "Resources": {
    "ApiGateway": {
      "Type": "AWS::Serverless::Api",
      "Properties": {
        "StageName": "Prod",
        "DefinitionBody": {
          "Fn::Transform": {
            "Name": "AWS::Include",
            "Parameters": {
              "Location": {
                "Fn::Sub": "s3://${AwsS3BucketName}/swagger.json"
              }
            }
          }
        }
      }
    },
    "DropboxToSnsFunction": {
      "Type": "AWS::Serverless::Function",
      "DependsOn": ["SnsTopic"],
      "Properties": {
        "CodeUri": "dropbox-to-sns/dropbox-to-sns.zip",
        "Handler": "index.handler",
        "Runtime": "nodejs8.10",
        "Policies": [
          {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": ["sns:Publish"],
                "Resource": { "Ref": "SnsTopic" }
              }
            ]
          }
        ],
        "Environment": {
          "Variables": {
            "AWS_SNS_TOPIC_ARN": { "Ref": "SnsTopic" },
            "DROPBOX_APP_SECRET": { "Ref": "DropboxAppSecret" }
          }
        },
        "Events": {
          "ApiGateway": {
            "Type": "Api",
            "Properties": {
              "Path": "/",
              "Method": "POST",
              "RestApiId": { "Ref": "ApiGateway" }
            }
          }
        }
      }
    },
    "SnsToS3Function": {
      "Type": "AWS::Serverless::Function",
      "DependsOn": ["DynamoDBTable", "S3Bucket", "SnsTopic"],
      "Properties": {
        "CodeUri": "sns-to-s3/sns-to-s3.zip",
        "Handler": "index.handler",
        "Runtime": "nodejs8.10",
        "Policies": [
          {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "dynamodb:PutItem",
                  "dynamodb:ListTables",
                  "dynamodb:GetItem",
                  "dynamodb:UpdateItem"
                ],
                "Resource": { "Fn::GetAtt": ["DynamoDBTable", "Arn"] }
              },
              {
                "Effect": "Allow",
                "Action": [
                  "s3:PutObject",
                  "s3:GetObject",
                  "s3:ListAllMyBuckets",
                  "s3:ListBucket",
                  "s3:DeleteObject"
                ],
                "Resource": { "Fn::GetAtt": ["S3Bucket", "Arn"] }
              },
              {
                "Effect": "Allow",
                "Action": ["sns:GetTopicAttributes", "sns:ListTopics"],
                "Resource": { "Ref": "SnsTopic" }
              }
            ]
          }
        ],
        "Environment": {
          "Variables": {
            "AWS_DYNAMODB_TABLE_NAME": { "Ref": "DynamoDBTable" },
            "AWS_S3_BUCKET_NAME": { "Ref": "S3Bucket" },
            "AWS_SNS_TOPIC_ARN": { "Ref": "SnsTopic" },
            "DROPBOX_USER_ID": { "Ref": "DropboxUserId" },
            "DROPBOX_USER_TOKEN": { "Ref": "DropboxUserToken" }
          }
        },
        "Events": {
          "SnsTopic": {
            "Type": "SNS",
            "Properties": {
              "Topic": { "Ref": "SnsTopic" }
            }
          }
        }
      }
    },
    "CreateS3ToGitHubFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "CodeUri": "create-s3-to-github/create-s3-to-github.zip",
        "Handler": "index.handler",
        "Runtime": "nodejs8.10",
        "Policies": [
          {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "s3:PutObject",
                  "s3:GetObject",
                  "s3:ListAllMyBuckets",
                  "s3:ListBucket"
                ],
                "Resource": { "Fn::GetAtt": ["S3Bucket", "Arn"] }
              }
            ]
          }
        ],
        "Environment": {
          "Variables": {
            "GITHUB_TOKEN": { "Ref": "GitHubToken" },
            "GITHUB_USERNAME": { "Ref": "GitHubUsername" },
            "GITHUB_REPO": { "Ref": "GitHubRepo" }
          }
        },
        "Events": {
          "CreateObjectS3Bucket": {
            "Type": "S3",
            "Properties": {
              "Bucket": { "Ref": "S3Bucket" },
              "Events": "s3:ObjectCreated:*"
            }
          }
        }
      }
    },
    "DeleteS3ToGitHubFunction": {
      "Type": "AWS::Serverless::Function",
      "Properties": {
        "CodeUri": "delete-s3-to-github/delete-s3-to-github.zip",
        "Handler": "index.handler",
        "Runtime": "nodejs8.10",
        "Policies": [
          {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Effect": "Allow",
                "Action": [
                  "s3:ListAllMyBuckets",
                  "s3:ListBucket",
                  "s3:DeleteObject"
                ],
                "Resource": { "Fn::GetAtt": ["S3Bucket", "Arn"] }
              }
            ]
          }
        ],
        "Environment": {
          "Variables": {
            "GITHUB_TOKEN": { "Ref": "GitHubToken" },
            "GITHUB_USERNAME": { "Ref": "GitHubUsername" },
            "GITHUB_REPO": { "Ref": "GitHubRepo" }
          }
        },
        "Events": {
          "RemoveObjectS3Bucket": {
            "Type": "S3",
            "Properties": {
              "Bucket": { "Ref": "S3Bucket" },
              "Events": "s3:ObjectRemoved:*"
            }
          }
        }
      }
    },
    "DynamoDBTable": {
      "Type": "AWS::Serverless::SimpleTable",
      "Properties": {
        "PrimaryKey": {
          "Name": "id",
          "Type": "String"
        },
        "ProvisionedThroughput": {
          "ReadCapacityUnits": 1,
          "WriteCapacityUnits": 1
        },
        "SSESpecification": {
          "SSEEnabled": true
        }
      }
    },
    "SnsTopic": {
      "Type": "AWS::SNS::Topic"
    },
    "S3Bucket": {
      "Type": "AWS::S3::Bucket"
    }
  },
  "Outputs": {
    "ApiGateway": {
      "Description": "API Gateway endpoint URL for Prod stage",
      "Value": {
        "Fn::Sub": "https://${ApiGateway}.execute-api.${AWS::Region}.amazonaws.com/Prod/"
      }
    },
    "S3BucketArn": {
      "Description": "ARN for 'S3Bucket' resource",
      "Value": { "Fn::GetAtt": ["S3Bucket", "Arn"] },
      "Export": { "Name": { "Fn::Sub": "${AWS::StackName}-S3BucketArn" } }
    },
    "CreateS3ToGitHubFunctionName": {
      "Description": "Name of the 'CreateS3ToGitHubFunction' resource",
      "Value": { "Ref": "CreateS3ToGitHubFunction" },
      "Export": {
        "Name": { "Fn::Sub": "${AWS::StackName}-CreateS3ToGitHubFunctionName" }
      }
    },
    "DeleteS3ToGitHubFunctionName": {
      "Description": "Name of the 'DeleteS3ToGitHubFunction' resource",
      "Value": { "Ref": "DeleteS3ToGitHubFunction" },
      "Export": {
        "Name": { "Fn::Sub": "${AWS::StackName}-DeleteS3ToGitHubFunctionName" }
      }
    }
  }
}
